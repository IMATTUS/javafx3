<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.201" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ViewController">
   <children>
      <TabPane layoutX="10.0" layoutY="9.0" prefHeight="279.0" prefWidth="376.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Untitled Tab 1">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <Label layoutX="151.0" layoutY="32.0" text="Calculate Sum" />
                        <TextField fx:id="txtNumber1" layoutX="114.0" layoutY="49.0" promptText="First Number" />
                        <TextField fx:id="txtNumber2" layoutX="114.0" layoutY="85.0" promptText="Second Number" />
                        <Button fx:id="btSum" layoutX="114.0" layoutY="125.0" mnemonicParsing="false" onAction="#onBtSumAction" text="Sum" />
                        <Label layoutX="114.0" layoutY="167.0" text="Result = " />
                        <Label fx:id="labelResult" layoutX="166.0" layoutY="167.0" prefHeight="17.0" prefWidth="73.0" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab text="Untitled Tab 2">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <ComboBox fx:id="comboBoxPerson" layoutX="14.0" layoutY="14.0" onAction="#onComboBoxAction" prefWidth="150.0" promptText="Select a Person" />
                        <Button fx:id="btAll" layoutX="199.0" layoutY="14.0" mnemonicParsing="false" onAction="#onBtAllAction" text="All" />
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
        </tabs>
      </TabPane>
   </children>
</AnchorPane>
